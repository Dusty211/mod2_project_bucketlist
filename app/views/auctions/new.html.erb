
<% if @auction.errors.any? %>
  <div id= "error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @auction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @auction do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= f.label :starting_bid %><br>
  <%= f.number_field :starting_bid %><br><br>
  <%= f.label :select_car %>
  <%= f.collection_select :car_id, @user.cars, :id, :display, prompt:true %><br><br>
  <%= f.submit %>
<% end %>
