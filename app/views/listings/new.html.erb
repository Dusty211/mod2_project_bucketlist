

<% if @listing.errors.any? %>
  <div id= "error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @listing do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= f.label :car_info %><br><br>
  <%= f.fields_for :car do |c| %>
    <%= c.label :make %><br>
    <%= c.text_field :make %><br>
    <%= c.label :model %><br>
    <%= c.text_field :model %><br>
    <%= c.label :color %><br>
    <%= c.text_field :color %><br>
    <%= c.label :year %><br>
    <%= c.number_field :year %><br>
    <%= c.label :mileage %><br>
    <%= c.number_field :mileage %><br>
    <% end %>
    <br><br>
    <%= f.label :user_id %>
  <%= f.collection_select :user_id, User.all, :id, :username, prompt:true %><br><br>
  <%= f.submit %>
<% end %>
